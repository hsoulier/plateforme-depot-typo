<main class="mt-3" style="min-width: 80vw;">
    <div class="text-3xl text-center mb-10">
        <p class="text-gray-400 mb-3 font-light">mot actuel</p>
        <h1 class="text-7xl uppercase font-bold tracking-wider" style="font-size: clamp(2rem, 9vw, 4.5rem);">kaléidoscope</h1>
    </div>
    <form action="/submit-work" method="post" enctype="multipart/form-data" class="relative w-4/5 mx-auto max-w-xl">
        <div
            class="absolute p-8 top-0 left-0 w-full h-full border-black border-4 bg-black transform translate-x-4 translate-y-4">
        </div>
        <div class="relative p-8 bg-white border-black border-4">
            <h2 class="text-2xl text-center mb-8">Déposer son travail</h1>
                <div class="flex mb-8 w-full gap-6">
                    <div class="flex-grow">
                        <input type="text" name="nickname" placeholder="prénom *"
                            class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out"
                            required />
                    </div>
                    <div class="flex-grow">
                        <input type="text" name="name" placeholder="nom *"
                            class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out"
                            required />
                    </div>
                </div>
                <div class="mb-8">
                    <input type="email" name="email" placeholder="email *"
                        class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out" required/>
                </div>
                <div class="flex mb-8 w-full gap-6">
                    <div class="flex-grow">
                        <input type="text" name="instagram" placeholder="@ instagram"
                            class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out" />
                    </div>
                    <div class="flex-grow">
                        <input type="text" name="twitter" placeholder="@ twitter"
                            class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out" />
                    </div>
                </div>
                <textarea name="description" rows="3" class="w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out mb-8" style="min-height: 3rem;" placeholder="petite description (si besoin)"></textarea>
                <input type="file" name="file" label="Déposer le fichier <br/>ou cliquez ici" is="drop-files" />
                <div class="flex justify-center mt-4">
                    <button type="submit"
                        class="transition-colors duration-200 ease-in-out justify-center mx-auto px-8 py-2 border-2 border-black text-2xl font-bold text-white bg-black hover:bg-white hover:text-black md:px-10">déposer</button>
                </div>
        </div>
    </form>
</main>