<main class="mt-3" style="min-width: 80vw;">
    <form action="/login-user" method="post" class="relative w-4/5 mx-auto max-w-xl">
        <div
            class="absolute p-8 top-0 left-0 w-full h-full border-black border-4 bg-black transform translate-x-4 translate-y-4"></div>
            <div class="relative p-8 bg-white border-black border-4">
                <h1 class="lowercase text-2xl text-center mb-8">acc√®s au dashboard</h1>
                {{#error}}
                    <p class="mb-4 text-center">{{error}}</p>
                {{/error}}
                <div class="mb-8">
                    <input type="text" name="user" placeholder="email"
                        class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out" autocomplete required />
                </div>
                <div class="mb-8">
                    <input type="password" name="password" placeholder="mot de passe"
                        class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out" autocomplete required />
                </div>
                <div class="flex justify-center mt-4">
                    <button type="submit"
                        class="transition-colors duration-200 ease-in-out justify-center mx-auto px-8 py-2 border-2 border-black text-2xl font-bold text-white bg-black hover:bg-white hover:text-black md:px-10">se
                        connecter</button>
                </div>
            </div>
    </form>
</main>