<main class="mt-3 update-password" style="min-width: 80vw;">
	<form action="/dashboard/update-password" method="post" class="relative w-4/5 mx-auto max-w-xl">
		<div
			class="absolute p-8 top-0 left-0 w-full h-full border-black border-4 bg-black transform translate-x-4 translate-y-4">
		</div>
		<div class="relative p-8 bg-white border-black border-4">
			<a href="/dashboard">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M19 12H6M12 5l-7 7 7 7" />
				</svg></a>
			<h1 class="lowercase text-2xl text-center mb-8">Changer de mot de passe</h1>
			{{#error}}
				<p class="mb-4 text-center">{{error}}</p>
			{{/error}}
			<div class="mb-8">
				<input type="text" name="user" placeholder="utilisateur"
					class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out"
					autocomplete required />
			</div>
			<div class="mb-8">
				<input type="password" name="password" placeholder="mot de passe"
					class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out"
					autocomplete required />
			</div>
			<div class="mb-8">
				<input type="password" name="passwordConf" placeholder="confirmer le mot de passe"
					class="lowercase w-full py-2 placeholder-gray-700 border-b-2 border-black focus:outline-none focus:border-gray-400 transition-colors duration-200 ease-in-out"
					autocomplete required />
					<span class="error opacity-40 block mt-2">Les mots de passes ne correspondent pas</span>
			</div>
			<div class="flex justify-center mt-4">
				<button type="submit"
					class="transition-colors duration-200 ease-in-out justify-center mx-auto px-8 py-2 border-2 border-black text-2xl font-bold text-white bg-black hover:bg-white hover:text-black md:px-10">mettre
					Ã  jour</button>
			</div>
		</div>
	</form>
</main>